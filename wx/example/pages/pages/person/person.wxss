/* pages/pages/person/person.wxss */

.container .scroll-view_H {
  height: 400rpx;
  width: 100%;
  white-space: nowrap;
}

.scroll-view-item_H {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.scroll-view-item_H image {
  width: 100%;
}

#green {
  background-color: green;
}

#red {
  background-color: red;
}

#yellow {
  background-color: yellow;
}

#blue {
  background-color: blue;
}

.main {
  display: flex;
  margin-top: 40rpx;
}

.main .dl {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}

.main .dl .item {
  width: 100%;
  display: flex;
  border-bottom: 2px dotted #ccc;
}

.main .dl .dt {
  width: 160rpx;
  padding-left: 15rpx;
  color: #999;
}

.main .dl .dd {
  flex: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  word-wrap: normal;
  color: #333;
}
