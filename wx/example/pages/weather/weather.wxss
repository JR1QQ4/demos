/* pages/weather/weather.wxss */

.header {
  margin: 40rpx 40rpx;
  display: flex;
  font-size: 45rpx;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.header .input {
  flex: 1;
}

.header .input input {
  min-height: 100rpx;
  padding: 0 20rpx;
}

.header .search {
  width: 80rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.main-head {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-head .city {
  font-size: 80rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.main-head .today {
  font-size: 45rpx;
  margin-bottom: 20rpx;
}

.main-head .image {
  height: 100rpx;
}

.main-head .image image {
  height: 100%;
}

.main-body {
  margin-top: 50rpx;
  display: flex;
  font-size: 40rpx;
}

.main-body .weather {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  border: 1px solid #ccc;
}

.main-body .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ccc;
}

.main-body .info view:first-child {
  margin-bottom: 10rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.main-body .info .temp {
  font-family: Arial, Helvetica, sans-serif;
}
.tips {
  display: flex;
  flex-direction: column;
}
.tips .item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.tips .item view {
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
.tips .item .title {
  text-align: center;
}
.tips .item .des {
  width: 100%;
}