/* pages/calc/calc.wxss */

.footer {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  font-size: 60rpx;
  display: flex;
  border-left: 2rpx solid #fff;
  box-sizing: border-box;
}

.footer navigator {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 2rpx solid #fff;
  color: #bebebe;
}

.footer navigator.active {
  color: #0b0;
}

.body {
  font-size: 45rpx;
}

.body label {
  display: block;
  padding: 20rpx 10rpx;
}

.body input {
  padding: 20rpx 10rpx;
  border: 1rpx solid #ccc;
}

.body button {
  margin: 40rpx 0;
}

.content {
  font-size: 40rpx;
}
